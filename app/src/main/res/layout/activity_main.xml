<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_bg_street"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="142dp"
        android:scaleType="centerCrop"
        android:src="@drawable/the_street"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_right_side"
        android:layout_width="286dp"
        android:layout_height="335dp"
        android:layout_marginTop="34dp"
        android:scaleType="fitXY"
        android:src="@drawable/right_sector"
        android:text="Hello World!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_loading_right_side"
        android:layout_width="36dp"
        android:layout_height="45dp"
        android:layout_marginTop="34dp"
        android:scaleType="fitXY"
        android:src="@drawable/right_sector"
        android:text="Hello World!"
        app:tint="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_left_side"
        android:layout_width="286dp"
        android:layout_height="336dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="30dp"
        android:rotation="-180"
        android:scaleType="fitXY"
        android:src="@drawable/right_sector"
        android:text="Hello World!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_loading_left_side"
        android:layout_width="56dp"
        android:layout_height="74dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="30dp"
        android:rotation="-180"
        android:scaleType="fitXY"
        android:src="@drawable/right_sector"
        android:text="Hello World!"
        app:tint="@color/black"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_bottom_side"
        android:layout_width="512dp"
        android:layout_height="142dp"
        android:layout_marginStart="143dp"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_sector"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motion_bottom_side"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/activity_main_scene"
        >

    <ImageView
        android:id="@+id/iv_loading_bottom_side"
        android:layout_width="76dp"
        android:layout_height="20dp"
        android:layout_marginStart="196dp"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_sector"
        android:text="Hello World!"
        app:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    </androidx.constraintlayout.motion.widget.MotionLayout>

    <ImageView
        android:id="@+id/iv_top_side"
        android:layout_width="654dp"
        android:layout_height="186dp"
        android:layout_marginStart="124dp"
        android:rotation="-180"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_sector"
        android:text="Hello World!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_loading_top_side"
        android:layout_width="104dp"
        android:layout_height="30dp"
        android:layout_marginStart="127dp"
        android:rotation="-180"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_sector"
        android:text="Hello World!"
        app:tint="@color/black"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

