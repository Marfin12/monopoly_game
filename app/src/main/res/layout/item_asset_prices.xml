<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_building_icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/blue_b_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_monopoly_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/m_logo_money"
        app:layout_constraintStart_toEndOf="@id/iv_building_icon"
        app:layout_constraintTop_toTopOf="@id/iv_building_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_building_icon"
        />

    <TextView
        android:id="@+id/tv_asset_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="#A6A6A6"
        android:textSize="12sp"
        android:layout_marginTop="-4dp"
        app:fontFamily="@font/league_spartan"
        app:layout_constraintStart_toEndOf="@id/iv_monopoly_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_monopoly_icon"
        app:layout_constraintTop_toTopOf="@id/iv_monopoly_icon"
        />

    <TextView
        android:id="@+id/tv_normal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textColor="#A6A6A6"
        android:textSize="10sp"
        android:layout_marginBottom="-3dp"
        app:fontFamily="@font/league_spartan"
        app:layout_constraintStart_toEndOf="@id/tv_asset_price"
        app:layout_constraintBottom_toBottomOf="@id/iv_monopoly_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>