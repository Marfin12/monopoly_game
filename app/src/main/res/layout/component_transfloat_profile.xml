<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/holder_bg_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="-24dp"
        android:scaleType="fitXY"
        android:src="@drawable/message_gray_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_title"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginHorizontal="64dp"
        android:background="@drawable/navy_rounded_bg_32_rad"
        app:layout_constraintEnd_toEndOf="@id/holder_bg_message"
        app:layout_constraintStart_toStartOf="@id/holder_bg_message"
        app:layout_constraintTop_toTopOf="@id/holder_bg_message" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Title"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:fontFamily="@font/poppins_light"
        app:layout_constraintBottom_toBottomOf="@id/view_title"
        app:layout_constraintEnd_toEndOf="@id/view_title"
        app:layout_constraintStart_toStartOf="@id/view_title"
        app:layout_constraintTop_toTopOf="@id/view_title" />

    <com.example.experiments2.component.dialog.profile.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:paddingBottom="60dp"
        app:layout_constraintEnd_toEndOf="@id/holder_bg_message"
        app:layout_constraintStart_toStartOf="@id/holder_bg_message"
        app:layout_constraintTop_toBottomOf="@id/view_title"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_new"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.example.experiments2.component.label.GameNormalLabel
                        android:id="@+id/lbl_holder_name_bg"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="-3dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_profile_new"
                        app:text="Change" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_profile_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    app:layout_constraintStart_toEndOf="@id/section_profile_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_profile_username"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        tools:text="Pumi"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:enabled="false"
                        app:fontFamily="@font/poppins_light"
                        app:layout_constraintBottom_toBottomOf="@id/iv_profile_edit_username"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/iv_profile_edit_username" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_profile_edit_username"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintStart_toEndOf="@id/et_profile_username"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_profile_done_username"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_checklist"
                        android:visibility="gone"
                        app:layout_constraintStart_toEndOf="@id/et_profile_username"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="12dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_profile_date"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_calendar"
                    app:layout_constraintEnd_toEndOf="@id/tv_profile_date"
                    app:layout_constraintStart_toStartOf="@id/tv_profile_date"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_profile_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="02 Jan 2023"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontFamily="@font/poppins_light"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_profile_rating" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_profile_total_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/card_logo"
                    app:layout_constraintBottom_toTopOf="@id/tv_profile_total_game"
                    app:layout_constraintEnd_toEndOf="@id/tv_profile_total_game"
                    app:layout_constraintStart_toStartOf="@id/tv_profile_total_game" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_profile_total_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    tools:text="20 games"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontFamily="@font/poppins_light"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_profile_date" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_profile_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_rating"
                    app:layout_constraintEnd_toEndOf="@id/tv_profile_rating"
                    app:layout_constraintStart_toStartOf="@id/tv_profile_rating"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_profile_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    tools:text="36% winrate"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontFamily="@font/poppins_light"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_profile_date" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_profile_match_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:paddingBottom="60dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/black_rounded_bg_12_rad_alpha_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/section_profile_info">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_profile_match_history_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Completed Games"
                    android:textColor="@color/gray_300"
                    android:textSize="20sp"
                    app:fontFamily="@font/poppins_light"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_match_history_column"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingVertical="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_match_history_title">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_match_history_column_player"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Player"
                        android:textAlignment="center"
                        android:textColor="@color/gray_900"
                        android:textSize="14sp"
                        app:fontFamily="@font/poppins_light" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_match_history_column_result"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Result"
                        android:textAlignment="center"
                        android:textColor="@color/gray_900"
                        android:textSize="14sp"
                        app:fontFamily="@font/poppins_light" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_match_history_column_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textAlignment="center"
                        android:textColor="@color/gray_900"
                        android:textSize="14sp"
                        app:fontFamily="@font/poppins_light" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_list_match"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    app:layout_constraintTop_toBottomOf="@id/layout_match_history_column"
                    tools:itemCount="0"
                    tools:listitem="@layout/item_match" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.example.experiments2.component.dialog.profile.MyScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_cancel"
        app:layout_constraintStart_toStartOf="@id/holder_bg_message"
        app:layout_constraintTop_toTopOf="@id/holder_bg_message" />

    <View
        android:id="@+id/view_transparant"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        android:background="@drawable/white_rounded_bg_8_rad"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/holder_bg_message"
        app:layout_constraintStart_toStartOf="@id/holder_bg_message"
        app:layout_constraintTop_toTopOf="@id/holder_bg_message" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/view_title"
        app:layout_constraintStart_toEndOf="@id/tv_message_title"
        app:layout_constraintTop_toTopOf="@id/view_title" />

</androidx.constraintlayout.widget.ConstraintLayout>