<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:paddingBottom="16dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_new"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_match_Player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pumi"
        android:textColor="@color/gray_300"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        app:fontFamily="@font/league_spartan"
        app:layout_constraintStart_toEndOf="@id/iv_profile_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile_new"
        app:layout_constraintTop_toTopOf="@id/iv_profile_new"
        />

</androidx.constraintlayout.widget.ConstraintLayout>