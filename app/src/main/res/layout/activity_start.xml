<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_radient"
    tools:context=".pages.start.StartActivity">

    <com.example.experiments2.component.button.GameNormalButton
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:text="Join As Guest"
        app:button_textPaddingTop="7dp"
        app:button_textPaddingBottom="7dp"
        app:buttonColor="@color/gray_700"
        app:textColor="@color/white"
        />

    <com.example.experiments2.component.button.GameNormalButton
        android:id="@+id/btn_connect_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_start"
        app:layout_constraintStart_toStartOf="parent"
        app:text="Connect"
        app:symbol_logo="@drawable/google_logo"
        app:button_textPaddingLeft="28dp"
        app:button_textPaddingTop="7dp"
        app:button_textPaddingBottom="7dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>