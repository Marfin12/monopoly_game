<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/cardroom_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ASSET A"
        android:textColor="@color/black"
        android:textSize="9sp"
        app:fontFamily="@font/league_spartan"
        app:layout_constraintEnd_toEndOf="@id/iv_room"
        app:layout_constraintStart_toStartOf="@id/iv_room"
        app:layout_constraintTop_toTopOf="@id/iv_room" />

    <TextView
        android:id="@+id/tv_max_player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textAlignment="center"
        android:background="@color/brown_100"
        app:fontFamily="@font/poppins_light"
        app:layout_constraintEnd_toEndOf="@id/iv_room"
        app:layout_constraintStart_toStartOf="@id/iv_room"
        app:layout_constraintTop_toBottomOf="@id/tv_room_title"
        tools:text="MAX PLAYER: 4"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_max_player"
        app:layout_constraintEnd_toEndOf="@id/iv_room"
        app:layout_constraintStart_toStartOf="@id/tv_max_player"
        tools:itemCount="0"
        tools:listitem="@layout/item_match" />

    <com.example.experiments2.component.button.GameNormalButton
        android:id="@+id/btn_game_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_room"
        app:layout_constraintEnd_toEndOf="@id/iv_room"
        app:layout_constraintStart_toStartOf="@id/iv_room"
        app:text="Start" />

</androidx.constraintlayout.widget.ConstraintLayout>