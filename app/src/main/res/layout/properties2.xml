<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_left_menu"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/left_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#fff" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_holder_name_bg"
            android:layout_width="65dp"
            android:layout_height="21dp"
            android:layout_marginTop="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/green_button_bg"
            app:layout_constraintEnd_toEndOf="@id/iv_profile"
            app:layout_constraintStart_toStartOf="@id/iv_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_holder_money_info"
            android:layout_width="68dp"
            android:layout_height="60dp"
            android:layout_marginTop="84dp"
            android:scaleType="fitXY"
            android:src="@drawable/money_icon"
            app:layout_constraintEnd_toEndOf="@id/iv_profile"
            app:layout_constraintStart_toStartOf="@id/iv_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_holder_money_bg"
            android:layout_width="65dp"
            android:layout_height="21dp"
            android:layout_marginTop="128dp"
            android:scaleType="fitXY"
            android:src="@drawable/green_button_bg"
            app:layout_constraintEnd_toEndOf="@id/iv_profile"
            app:layout_constraintStart_toStartOf="@id/iv_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_holder_asset"
            android:layout_width="88dp"
            android:layout_height="70dp"
            android:layout_marginTop="176dp"
            android:src="@drawable/asset_icon"
            app:layout_constraintEnd_toEndOf="@id/iv_profile"
            app:layout_constraintStart_toStartOf="@id/iv_profile"
            app:layout_constraintTop_toTopOf="parent" />


        <com.example.experiments2.component.GameNormalButton
            android:id="@+id/btn_game_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            app:text="Back"
            app:symbol="â†©"
            app:layout_constraintEnd_toEndOf="@id/iv_profile"
            app:layout_constraintStart_toStartOf="@id/iv_profile"
            app:layout_constraintTop_toBottomOf="@id/iv_holder_asset"
            />

        <TextView
            android:id="@+id/tv_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pumi"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:fontFamily="@font/poppins_light"
            app:layout_constraintBottom_toBottomOf="@id/iv_holder_name_bg"
            app:layout_constraintEnd_toEndOf="@id/iv_holder_name_bg"
            app:layout_constraintStart_toStartOf="@id/iv_holder_name_bg"
            app:layout_constraintTop_toTopOf="@id/iv_holder_name_bg" />

        <TextView
            android:id="@+id/tv_player_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23,080"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:fontFamily="@font/poppins_light"
            app:layout_constraintBottom_toBottomOf="@id/iv_holder_money_bg"
            app:layout_constraintEnd_toEndOf="@id/iv_holder_name_bg"
            app:layout_constraintStart_toStartOf="@id/iv_holder_name_bg"
            app:layout_constraintTop_toTopOf="@id/iv_holder_money_bg" />

        <TextView
            android:id="@+id/tv_player_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            app:fontFamily="@font/poppins_light"
            app:layout_constraintStart_toStartOf="@id/iv_holder_name_bg"
            app:layout_constraintTop_toTopOf="@id/iv_holder_asset" />

        <TextView
            android:id="@+id/tv_until_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="33dp"
            app:fontFamily="@font/poppins_light"
            app:layout_constraintStart_toStartOf="@id/iv_holder_name_bg"
            app:layout_constraintTop_toTopOf="@id/iv_holder_asset" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>