<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_parent_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_money_card"
        android:layout_width="56dp"
        android:layout_height="100dp"
        android:src="@drawable/bg_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="ACTION ?"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:textStyle="bold"
        app:fontFamily="@font/league_spartan"
        app:layout_constraintEnd_toEndOf="@id/iv_money_card"
        app:layout_constraintStart_toStartOf="@id/iv_money_card"
        app:layout_constraintTop_toTopOf="@id/iv_money_card" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_sample_question"
        app:layout_constraintBottom_toBottomOf="@id/iv_money_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_money_card" />

<!--    <com.example.experiments2.component.button.GameNextButton-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:text="NEXT"-->
<!--        />-->

</androidx.constraintlayout.widget.ConstraintLayout>